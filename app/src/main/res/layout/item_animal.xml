<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="animal"
            type="com.example.animals.model.Animal" />

        <variable
            name="listener"
            type="com.example.animals.view.AnimalClickListener" />
    </data>

<!-- The tag passed in must be a unique value   -->
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="@{listener::onClick}"
    android:tag="@{animal.name}"
    android:id="@+id/animalLayout"
    android:layout_margin= '10dp'>

    <ImageView
        android:id="@+id/animalImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        android:imageUrl="@{animal.imageUrl}"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/animalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#afff"
        android:gravity="center"
        android:padding="4dp"
        android:text="@{animal.name}"
        style="@style/Title"
        app:layout_constraintBottom_toBottomOf="@+id/animalImage"
        app:layout_constraintEnd_toEndOf="@id/animalImage"
        app:layout_constraintStart_toStartOf="@+id/animalImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
